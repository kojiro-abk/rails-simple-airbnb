<h1>Flat's details</h1>

<h3><%= @flat.name %></h3>
<p><%= @flat.address %></p>
<p><%= @flat.description %></p>
<p>Price: <%= @flat.price_per_night %></p>
<p>Guests: <%= @flat.number_of_guests %></p>

<%= link_to "Edit", edit_flat_path %>
<i><%= link_to "Remove", flat_path(@flat), method: :delete, data: { confirm: "Are you sure?" } %></i>
<%= link_to "Back to list", flats_path %>